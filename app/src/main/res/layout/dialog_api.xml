<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
android:paddingBottom="8dp"
>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="@dimen/default_large_row_size"
            android:padding="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout222">

        <TextView
                android:id="@+id/tvTitle22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Welcome To Timeruler"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@color/white"/>
    </LinearLayout>
    <EditText

            android:id="@+id/dialog_et_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:ems="10"
            android:hint="Company IP"
            android:padding="14dp"
            android:background="@drawable/edit_text_login_border"
            android:textSize="16sp"
            android:textColorHint="@color/green"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout222" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout222"/>
    <EditText

            android:id="@+id/dialog_et_folder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:ems="10"
            android:hint="Company Name"
            android:padding="14dp"
            android:background="@drawable/edit_text_login_border"
            android:textSize="16sp"
            android:textColorHint="@color/green"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_et_ip"
            app:layout_constraintEnd_toEndOf="@+id/dialog_et_ip"
            app:layout_constraintStart_toStartOf="@+id/dialog_et_ip"/>

    <Button android:layout_width="0dp" android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:background="@drawable/button_shape"
            android:id="@+id/submit_ip"
            app:layout_constraintEnd_toEndOf="@+id/dialog_et_folder"
            app:layout_constraintStart_toStartOf="@+id/dialog_et_folder" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_et_folder"
android:layout_marginBottom="15dp"
    />

</android.support.constraint.ConstraintLayout>