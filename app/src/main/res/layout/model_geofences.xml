<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
android:paddingLeft="8dp"
android:paddingRight="8dp"
 android:paddingTop="4dp"
 android:paddingBottom="4dp"

                                             android:background="@color/colorPrimary"
>
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:cardCornerRadius="5dp"
                                        android:elevation="5dp"

                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
        >


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:textStyle="bold"

                      android:text="Geniihut Office"

                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                      app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView45"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/Address"

                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                      app:layout_constraintTop_toBottomOf="@+id/textView45" android:id="@+id/textView41"/>


            <ImageView android:layout_width="40dp" android:layout_height="40dp"
                       android:src="@mipmap/ic_close"
                       android:id="@+id/button_delete_geofence"
                       android:layout_marginTop="8dp"
                       app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                       android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="@+id/textView45"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:text="Gorordo Avenue, Lahug, Village, Cebu City, Cebu, PH"
                      android:maxLines="2"
                      android:paddingRight="50dp"
                      android:layout_marginStart="8dp"
                      app:layout_constraintTop_toTopOf="@+id/textView41"
                      app:layout_constraintStart_toEndOf="@+id/textView41"
                      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
                      android:id="@+id/textView46"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Lat:"

                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/textView46"
                      app:layout_constraintStart_toStartOf="@+id/textView41"
                      android:id="@+id/geoLat"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="123123.213"
                      android:id="@+id/geoLong"
                      app:layout_constraintStart_toEndOf="@+id/geoLat"
                      android:layout_marginStart="8dp"
                      app:layout_constraintTop_toTopOf="@+id/geoLat"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Long:"

                      android:id="@+id/textView47" android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/geoLat"
                      app:layout_constraintStart_toStartOf="@+id/geoLat"


            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="123123.213"
                      android:id="@+id/geoLat5"
                      app:layout_constraintStart_toEndOf="@+id/textView47"
                      app:layout_constraintTop_toTopOf="@+id/textView47" android:layout_marginStart="8dp"/>

            <TextView android:layout_width="0dp" android:layout_height="1dp"
                      android:background="@color/black"
                      android:alpha=".5"
                      android:visibility="gone"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                      app:layout_constraintTop_toBottomOf="@+id/geoLat5" android:layout_marginEnd="8dp"
                      android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                      android:layout_marginBottom="16dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
