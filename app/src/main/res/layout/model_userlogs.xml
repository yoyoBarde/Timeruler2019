<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

android:id="@+id/constraint_background"
              android:layout_height="wrap_content"


>

    <TextView android:layout_width="90dp" android:layout_height="wrap_content"
              android:paddingVertical="10dp"
              android:textAlignment="center"
              android:text="IN"
              android:id="@+id/userAction" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:layout_width="0dp" android:layout_height="0dp"
              app:layout_constraintStart_toEndOf="@+id/userAction"
              android:text="Febuary 25, 1999"
              android:textAlignment="center"
              android:id="@+id/userLogData"
              android:paddingVertical="10dp"
              app:layout_constraintTop_toTopOf="@+id/userAction"
              app:layout_constraintBottom_toBottomOf="@+id/userAction" app:layout_constraintEnd_toEndOf="parent"
    />
</android.support.constraint.ConstraintLayout>
