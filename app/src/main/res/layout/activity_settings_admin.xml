<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsAdmin"
>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <android.support.v7.widget.Toolbar android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
    android:background="@drawable/gradient"
                          android:minHeight="?attr/actionBarSize"
        android:id="@+id/settingsToolbar"

    >


    </android.support.v7.widget.Toolbar>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="ADMIN"
                  android:textSize="15dp"
                  android:textStyle="bold"
                  android:textColor="@color/colorAccent"
                  android:paddingVertical="20dp"


        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Workplace Location"
                  android:textColor="@color/black"

        />

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/colorPrimary"
                      android:text="Change"
                      android:id="@+id/tv_setLocation"
                      app:layout_constraintEnd_toEndOf="@+id/appCompatCheckBox"
                      app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                      app:layout_constraintTop_toTopOf="parent"/>

            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:text="Gorordo Avenue, Lahug,Village, Cebu City, Cebu, PH"
                      android:maxLines="2"
                      android:paddingRight="50dp"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textView6"
                      app:layout_constraintEnd_toStartOf="@+id/tv_setLocation" android:layout_marginEnd="8dp"/>

            <android.support.v7.widget.AppCompatCheckBox
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                                                         android:layout_height="wrap_content"
                                                         app:layout_constraintEnd_toEndOf="parent"
                                                         android:id="@+id/appCompatCheckBox"
                                                         app:layout_constraintTop_toTopOf="@+id/textView6"
                                                         app:layout_constraintBottom_toBottomOf="@+id/textView6"/>


        </android.support.constraint.ConstraintLayout>


    </LinearLayout>



    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
                                                 android:visibility="gone"
    >


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="@color/black"

                  android:text="Take a photo"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/textView13"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Takes a photo when enabled"
                  app:layout_constraintTop_toBottomOf="@+id/textView13"
                  app:layout_constraintStart_toStartOf="@+id/textView13" android:id="@+id/textView12"/>
        <android.support.v7.widget.AppCompatCheckBox android:layout_width="wrap_content"
                                                     android:layout_height="32dp"
                                                     app:layout_constraintTop_toTopOf="@+id/textView13"
                                                     app:layout_constraintBottom_toBottomOf="@+id/textView12"
                                                     app:layout_constraintVertical_bias="0.8"
                                                     app:layout_constraintEnd_toEndOf="parent"
        />

    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"
            android:alpha=".5"
    />
    <TextView
            android:id="@+id/tv_viewAllusers"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:text="View all users"
              android:paddingHorizontal="20dp"
             />
    <TextView
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"
            android:alpha=".5"
    />
    
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="View all Logs"
                  android:id="@+id/textView14" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"

                  android:textColor="@color/black"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="SYNC"
                  android:textSize="15dp"
                  android:textColor="@color/colorAccent"


                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView14"
                  android:id="@+id/textView17"
                  app:layout_constraintStart_toStartOf="@+id/textView14"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Auto sync logs"
                  android:id="@+id/textView15"
                  android:textColor="@color/black"

                  app:layout_constraintTop_toBottomOf="@+id/textView17" android:layout_marginTop="8dp"
                  app:layout_constraintStart_toStartOf="@+id/textView17"/>
        <android.support.v7.widget.AppCompatCheckBox android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     app:layout_constraintTop_toTopOf="@+id/textView15"
                                                     app:layout_constraintBottom_toBottomOf="@+id/textView15"
                                                     app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="USER"
                  android:textSize="15dp"
                  android:textColor="@color/colorAccent"

                  android:id="@+id/textView16"
                  app:layout_constraintStart_toStartOf="@+id/textView15"
                  app:layout_constraintTop_toBottomOf="@+id/textView15" android:layout_marginTop="16dp"/>
        <TextView android:layout_width="60dp" android:layout_height="wrap_content"
                  android:text="My logs"
                  app:layout_constraintTop_toBottomOf="@+id/textView16"
                  app:layout_constraintStart_toStartOf="@+id/textView16" android:layout_marginTop="8dp"
                  android:textColor="@color/black"
                  android:id="@+id/adminLogs"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    <TextView
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"
            android:alpha=".5"
    />
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                  android:text="API"
                  android:textSize="15dp"
                  android:textColor="@color/colorAccent"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="16dp" android:id="@+id/textView28"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Company IP"

                  app:layout_constraintTop_toBottomOf="@+id/textView28"
                  app:layout_constraintStart_toStartOf="@+id/textView28" android:layout_marginTop="4dp"
                  android:id="@+id/textView30"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="API name"
                  android:id="@+id/textView29"
                  app:layout_constraintTop_toBottomOf="@+id/textView30"
                  app:layout_constraintStart_toStartOf="@+id/textView30"
                  app:layout_constraintEnd_toEndOf="@+id/textView30" app:layout_constraintHorizontal_bias="0.0"
                  android:layout_marginTop="2dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginBottom="8dp"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="@color/colorPrimary"
                  android:text="Change"
                  android:id="@+id/tv_setApi"
                  app:layout_constraintBottom_toBottomOf="@+id/textView29" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="@+id/textView30" android:layout_marginEnd="24dp"
                  app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:text="Logout"
              android:textSize="20sp"
              android:id="@+id/settings_logout"
              android:textStyle="bold"
              android:textColor="@color/black"
    />

</LinearLayout>
  </ScrollView>